<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maroon"
    tools:context=".ViewGradeDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:elevation="5dp">

    <TextView
        android:id="@+id/titleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="KABARAK UNIVERSITY"
        android:textColor="@color/golden"
        android:textSize="34sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/RL_Form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/titleHome"
        android:padding="3dp"
        android:paddingTop="5dp"
        android:background="@drawable/btn_bg"
        android:elevation="3dp">

        <TextView
            android:id="@+id/textViewFill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:text="View your marks "
            android:textColor="@color/ok_button"
            android:textSize="26sp"
            android:textStyle="bold"
            />

        <View
            android:id="@+id/splitLine1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:layout_below="@+id/textViewFill"
            android:background="@color/maroon" />

        <TextView
            android:id="@+id/TV_RegNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg1"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/splitLine1"
            android:hint="Registration Number"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/lightgrey" />

        <TextView
            android:id="@+id/TV_StudentName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg1"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/TV_RegNo"
            android:hint="Student Name"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/lightgrey" />

        <TextView
            android:id="@+id/TV_Unitname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg1"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Unit Name"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_below="@+id/TV_StudentName"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:padding="10dp"
            android:textColorHint="@color/lightgrey" />

        <TextView
            android:id="@+id/TV_Unitcode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg1"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/TV_Unitname"
            android:hint="Unit Code"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/lightgrey" />

        <TextView
            android:id="@+id/TV_UnitStage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg1"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/TV_Unitcode"
            android:hint="Unit Stage"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/lightgrey" />

        <TextView
            android:id="@+id/TV_LecturerName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg1"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/TV_UnitStage"
            android:hint="Lecturer Name"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/lightgrey" />

        <TextView
            android:id="@+id/TV_semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV_LecturerName"
            android:text="Examination Semester : "
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="6dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="3dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/lightgrey"/>

        <TextView
            android:id="@+id/TV_ExamSemester"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:background="@drawable/input_bg1"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/TV_LecturerName"
            android:layout_toRightOf="@+id/TV_semester"
            android:hint="Exam Semester"
            android:inputType="text"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/lightgrey" />


        <TextView
            android:id="@+id/TV_ExamYear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg1"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/TV_semester"
            android:hint="Examination Year"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/lightgrey" />

        <TextView
            android:id="@+id/TV_ExamTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV_ExamYear"
            android:text="Exam Type : "
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="6dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="3dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/lightgrey"/>

        <TextView
            android:id="@+id/TV_ExamType"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:background="@drawable/input_bg1"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/TV_ExamYear"
            android:layout_toRightOf="@+id/TV_ExamTypeLabel"
            android:hint="Exam Type"
            android:inputType="text"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/lightgrey" />

        <TextView
            android:id="@+id/TV_studentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV_ExamType"
            android:text="Student Comment: "
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="6dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="3dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/lightgrey"/>

        <TextView
            android:id="@+id/TV_StudentComment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/input_bg2"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/TV_studentLabel"
            android:hint="Write Description here..."
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:paddingStart="20dp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:textColorHint="@color/lightgrey" />

        <TextView
            android:id="@+id/TV_Grade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg1"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/TV_StudentComment"
            android:hint="Enter Marks"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="@color/lightgrey" />

        <TextView
            android:id="@+id/TV_lecturerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV_Grade"
            android:text="For Official Use: "
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="6dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="3dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/lightgrey"/>

        <TextView
            android:id="@+id/TV_LecturerComment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/input_bg2"
            android:ems="10"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/TV_lecturerLabel"
            android:hint="Give comment here..."
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/darkgrey"
            android:textStyle="bold"
            android:textColorHint="@color/lightgrey" />

        <View
            android:id="@+id/splitLine2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:layout_below="@+id/TV_LecturerComment"
            android:background="@color/maroon" />

        <LinearLayout
            android:id="@+id/LL_reply"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_below="@id/splitLine2"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:background="@drawable/submit_bg"
            android:elevation="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/TV_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>